.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=title=='Schedule'?'active':undefined)
          a(href='/') Schedule
        li.dropdown(class=title=='Management'?'active':undefined)
          a.dropdown-toggle(href='#', data-toggle='dropdown')
              | Management
              i.caret
              ul.dropdown-menu
                  li: a(href='/management/services') Services
                  li: a(href='/management/providers') Providers
                  li: a(href='/management/locations') Locations
                  li: a(href='/management/scheduleSettings') Schedule Settings
                  li.divider
                  li: a(href='/management/form') Booking Form
                  li: a(href='/management/widget') Booking Widget

        li(class=title=='Analytics'?'active':undefined)
          a(href='/analytics') Analytics
        li(class=title=='Contact'?'active':undefined)
          a(href='/contact') Contact
        li.dropdown(class=title=='Settings'?'active':undefined)
          a.dropdown-toggle(href='#', data-toggle='dropdown')
              | Settings
              i.caret
              ul.dropdown-menu
                  li: a(href='/settings/application') Application
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li: a(href='/account') My Account
              li.divider
              li: a(href='/logout') Logout